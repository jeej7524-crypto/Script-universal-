-- Configurações iniciais
local LINK_DO_GRUPO = "https://www.roblox.com/groups/1234567/SEU-GRUPO" -- Coloque seu link aqui

-- Criação da Interface (ScreenGui)
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ScriptPremiumGui"
screenGui.ResetOnSpawn = false -- Para não sumir se o personagem morrer
screenGui.Parent = playerGui

-- Criação do Fundo (Frame Principal)
local mainFrame = Instance.new("Frame")
mainFrame.Name = "MainFrame"
mainFrame.Size = UDim2.new(0, 500, 0, 350)
mainFrame.Position = UDim2.new(0.5, -250, 0.5, -175) -- Centralizado
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25) -- Cor cinza escuro
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

-- Arredondar as bordas
local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 10)
uiCorner.Parent = mainFrame

-- Título "SCRIPT PREMIUM"
local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "Title"
titleLabel.Size = UDim2.new(1, 0, 0, 60)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "SCRIPT PREMIUM"
titleLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Cor Dourada
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextSize = 36
titleLabel.Parent = mainFrame

-- Texto de Instrução "GRANDE"
local instructionLabel = Instance.new("TextLabel")
instructionLabel.Name = "Instructions"
instructionLabel.Size = UDim2.new(0.9, 0, 0, 100)
instructionLabel.Position = UDim2.new(0.05, 0, 0.2, 0)
instructionLabel.BackgroundTransparency = 1
instructionLabel.Text = "PARA DESBLOQUEAR O SCRIPT\nSIGA TODOS ESTES PASSOS:"
instructionLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
instructionLabel.Font = Enum.Font.GothamBlack
instructionLabel.TextSize = 24
instructionLabel.TextWrapped = true
instructionLabel.Parent = mainFrame

-- Passo 1 (Texto descritivo)
local stepLabel = Instance.new("TextLabel")
stepLabel.Name = "Step1"
stepLabel.Size = UDim2.new(0.9, 0, 0, 60)
stepLabel.Position = UDim2.new(0.05, 0, 0.5, 0)
stepLabel.BackgroundTransparency = 1
stepLabel.Text = "1. Copie o link abaixo, coloque em qualquer navegador (PC ou Celular) e entre no grupo:"
stepLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
stepLabel.Font = Enum.Font.Gotham
stepLabel.TextSize = 16
stepLabel.TextWrapped = true
stepLabel.TextXAlignment = Enum.TextXAlignment.Left
stepLabel.Parent = mainFrame

-- Caixa para copiar o Link (TextBox)
local linkBox = Instance.new("TextBox")
linkBox.Name = "LinkBox"
linkBox.Size = UDim2.new(0.8, 0, 0, 40)
linkBox.Position = UDim2.new(0.1, 0, 0.7, 0)
linkBox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
linkBox.Text = LINK_DO_GRUPO
linkBox.TextColor3 = Color3.fromRGB(0, 170, 255) -- Azul claro
linkBox.Font = Enum.Font.Code
linkBox.TextSize = 14
linkBox.ClearTextOnFocus = false -- Impede que apague ao clicar
linkBox.TextEditable = false -- Impede que o usuário mude o link
linkBox.Parent = mainFrame

-- Arredondar bordas da caixa de link
local boxCorner = Instance.new("UICorner")
boxCorner.CornerRadius = UDim.new(0, 6)
boxCorner.Parent = linkBox

-- Botão de Fechar (Opcional)
local closeButton = Instance.new("TextButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.new(0, 30, 0, 30)
closeButton.Position = UDim2.new(1, -35, 0, 5)
closeButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
closeButton.Text = "X"
closeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
closeButton.Font = Enum.Font.GothamBold
closeButton.TextSize = 18
closeButton.Parent = mainFrame

local closeCorner = Instance.new("UICorner")
closeCorner.CornerRadius = UDim.new(0, 4)
closeCorner.Parent = closeButton

-- Função para fechar a tela
closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
